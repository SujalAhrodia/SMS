<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :brand %>
    <%= form.text_field :brand, required: true %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, required: true %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, required: true %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.text_field :cost, required: true %>
  </div>

  <div class="field">
    <%= form.label :purchases %>
    <%= form.number_field :purchases, required: true %>
  </div>

  <div class="field">
    <%= form.label :available %>
    <%= form.check_box :available %>
  </div>

  <div class="field">
    <%= form.label :special %>
    <%= form.check_box :special %>
  </div>

<!--  <div class="field">-->
    <%#= form.label :restricted %>
    <%#= form.check_box :restricted %>
<!--  </div>-->

  <div class="field">
    <%= form.label :age_restricted %>
    <%= form.check_box :age_restricted %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <!-- this has been changed from form.text to form.file -->
    <%= form.text_field :image, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
