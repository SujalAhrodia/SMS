<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>User</th>
      <th>Item</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
<!--        to display just for the user-->
        <%if (order.user_id == current_user.id) && (not current_user.admin?)%>
          <td><%= order.status %></td>
          <td><%= order.quantity %></td>
          <td><%= order.price %></td>
          <td><%= order.user_id %></td>
          <td><%= order.item_id %></td>
          <td><%= order.name %></td>

          <!--        <td><%#= link_to 'Show', order %></td>-->
<!--        <td><%#= link_to 'Edit', edit_order_path(order) %></td>-->
<!--        <td><%#= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <%else %>
<!--          admin display-->
          <td><%= order.status %></td>
          <td><%= order.quantity %></td>
          <td><%= order.price %></td>
          <td><%= order.user_id %></td>
          <td><%= order.item_id %></td>
          <td><%= order.name %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

