<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>DateofBirth</th>
      <th>Address</th>
      <th>Email</th>
      <th>Card Name</th>
      <th>Card Number</th>
      <th>Expiry Date</th>
      <th>CVV</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.phone %></td>
        <td><%= item.dob %></td>
        <td><%= item.address %></td>
        <td><%= item.email %></td>
        <td><%= item.card_name %></td>
        <td><%= item.card_number %></td>
        <td><%= item.exp %></td>
        <td><%= item.cvv %></td>
        <td><%= item.admin %></td>
        <td><%= link_to 'Show', item %></td>
        <% if current_user && current_user.admin? %>
          <td><%= link_to 'Edit', edit_user_path(item) %></td>
            <% if !item.admin %>
                <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

